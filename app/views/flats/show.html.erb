<div class="container mt-5 bg-white rounded p-5">
  <h1 class="mb-5"><%= @flat.name %></h1>
  <%= image_tag @flat.img_url, alt: "", class: "w-100 rounded"%>
  <div class="p-3">
    <p><%= @flat.description %></p>
    <div class="d-flex justify-content-between">
      <p class="w-50 align-bottom"><%= @flat.address %></p>
      <div>
        <div class="d-flex justify-content-end">
          <i class="fas fa-user-friends align-middle m-2"></i>
          <p><%= @flat.number_of_guests%></p>
        </div>
        <p>per night: â‚¬<%= @flat.price_per_night %></p>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-end">
    <h3>
      <%= link_to flat_path(@flat.id),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
    </h3>
    <h3>
      <%= link_to edit_flat_path(@flat.id) do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
    </h3>
  </div>
</div>
